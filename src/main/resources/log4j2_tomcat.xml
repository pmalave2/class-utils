<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="general" monitorInterval="1800">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout> 
        </Console>
        <RollingRandomAccessFile name="RAF" fileName="${sys:user.dir}/app.log" filePattern="app-%d{MM-dd-yyyy}.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-6p] %c{3} - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="RAF"/>
            <AppenderRef ref="STDOUT"/>
        </Root> 
    </Loggers>
</Configuration>