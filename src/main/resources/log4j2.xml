<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="general">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n</Pattern>
            </PatternLayout> 
        </Console>
        <RandomAccessFile name="RAF" fileName="app.log" immediateFlush="false" append="true">
            <PatternLayout>
                <Pattern>%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] - %m%n</Pattern>
            </PatternLayout> 
        </RandomAccessFile>
    </Appenders>
    <Loggers>
        <asyncRoot level="error">
            <AppenderRef ref="RAF"/>
            <AppenderRef ref="STDOUT"/>
        </asyncRoot>
        <asyncRoot level="info">
            <AppenderRef ref="RAF"/>
            <AppenderRef ref="STDOUT"/>
        </asyncRoot>
        <asyncRoot level="trace">
            <AppenderRef ref="RAF"/>
            <AppenderRef ref="STDOUT"/>
        </asyncRoot>
    </Loggers>
</Configuration>